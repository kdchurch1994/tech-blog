<div class="container"> <!-- signup handlebars page the provides the necessary input capabilities for a user to sign up to use the website. References the signup.js file -->
    <div class="row">
        <h3 class="card">Sign Up</h3>
        <form id ="signup-form" class="card-body">

            <label class="form-label" for="email-signup">email address:</label>
            <input id="email-signup" type="text" autofocus="true" class="form-input" />        

            <label class="form-label" for="username-signup">username:</label>
            <input id="username-signup" type="text" autofocus="true" class="form-input" />        
            
            <label class="form-label" for="password-signup">password:</label>
            <input id="password-signup" type="password" autofocus="true" class="form-input" />

            <button type="submit" class="btn bg-primary text-white">Signup</button>
            <a class="login-link" href="/login">Click to Login</a>
        </form>
    </div>
</div>

<script src="/javascript/signup.js"></script>