<div class="container"> <!-- login handlebars page the provides the necessary input capabilities for a user to login to the website. References the login.js file -->
    <div class="row">
        <h3 class="card">Login</h3>
        <form id ="login-form" class="card-body">
            <label class="form-label" for="username-login">username</label>
            <input id="username-login" type="text" autofocus="true" class="form-input" />        
            
            <label class="form-label" for"password-login">password</label>
            <input id="password-login" type="password" autofocus="true" class="form-input" />

            <button type="submit" class="btn bg-primary text-white">Login</button>
            <a class="login-link" href="/signup">Click to signup</a>
        </form>
    </div>
</div>

<script src="/javascript/login.js"></script>