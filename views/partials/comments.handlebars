<div class="container"> <!-- patial to handle comments for a post by displaying the user's username and the date they made the comment -->
    <div class="row comments">
        {{#each this}}
            <div class="col-12 card">
                <h3 class="card-header"></h3>
                <section class="comment card-body">
                    <div class="text">
                        {{comment_text}}
                    </div>
                    <div class="meta">
                        -{{user.username}}, {{format_date created_at}}
                    </div>
                </section>
            </div>
        {{/each}}
    </div>
</div>